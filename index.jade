		.container-fluid(ng-controller="mainCtrl")
			.row(window-height)
				div(style="position:absolute; font-size:40px; color: red; left:40%; top:30%; z-index:0") Bewakoof
				carousel(interval="myInterval")
					slide(ng-repeat="slide in slides", active="slide.active")
						.slide-container(style="background-image:url({{slide.image}})")
						.carousel-caption
							h4(ng-show="slide.active", ng-class="{'animated fadeInRight':slide.active==true}") {{slide.title}}
							p(ng-show="slide.active", ng-class="{'animated fadeInRight':slide.active==true}") {{slide.text}}
							div(ng-show="slide.active", ng-class="{'animated flipInX':slide.active==true}")
